<!DOCTYPE html>
<html>
<head>
	<title>Bootstrap Custom User Login Template</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>
<div id="container">
<%= render "/layouts/user" %>

<% if flash[:notice] || flash[:alert]%>
	  <%= flash[:notice] %>
	  <%= flash[:alert] %>  
	<% end %>
	<%= yield %>
</div>
</body>
</html>
